{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react-jsx",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@root/shared/*": ["libs/shared/src/*"],
      "@root/shared/components": ["libs/shared/src/components/index.ts"],
      "@root/shared": ["libs/shared/index.ts"],
      "@idea/*": ["apps/idea-dropper/src/*"],
      "@idea": ["apps/idea-dropper/src/index.ts"],
      "@gpse/*": ["apps/google-photos-search-enhancer/*"],
      "@portfolio/*": ["apps/portfolio/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
